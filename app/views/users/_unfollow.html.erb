<%= form_for(current_user.following_relationships.find_by(followed_id: @user.id),
             html: { method: :delete },
             remote: true) do |f|  %>
  <%= f.submit "Unfollow", class: "btn" %>
<% end %>

<% if current_user != @user %>
 <div id="follow_form">
   <% if current_user.following?(@user) %>
    <%= render 'unfollow' %>
   <% else %>
    <%= render 'follow' %>
  <% end %>
  </div>
<% end %>
